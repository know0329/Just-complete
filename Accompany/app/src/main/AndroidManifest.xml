<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.accompany">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Accompany"
        android:usesCleartextTraffic="true">
        <activity android:name=".PlusProtector_Activity"></activity>
        <activity android:name=".Reservation_Activity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="withreservation.page.link"
                    android:pathPattern="/protector"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".ReservationList_Activity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Signup_Activity" />
        <activity android:name=".matchingScreen" />
        <activity android:name=".DaumWebViewActivity2" />
        <activity android:name=".matchingSurvey" />
        <activity android:name=".DaumWebViewActivity" />
        <activity android:name=".matchingApply" />
        <activity android:name=".Login_Activity"/>
        <activity android:name=".Activity_Splash">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
    </application>

</manifest>