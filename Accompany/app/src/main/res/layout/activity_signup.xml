<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_Activity"
    android:layout_marginHorizontal="30dp">

    <TextView
        android:id="@+id/signup_text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#79C9ED"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266" />

    <EditText
        android:id="@+id/signup_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_main"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/signup_edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="성함"
        app:layout_constraintTop_toBottomOf="@+id/signup_edittext_email"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/signup_edittext_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        app:layout_constraintTop_toBottomOf="@+id/signup_edittext_name"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/signup_button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="4dp"
        android:background="#79C9ED"
        android:text="회원가입"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_edittext_password" />
</androidx.constraintlayout.widget.ConstraintLayout>